@{
    ViewBag.Title = "Create";
    Layout = "../hacklayout.cshtml";
}

<div class="container">
<h2>Create a ticket</h2>

<form action="" method="post" class=".form-groups">
    @ViewBag.status
    <div class="form-group">
    <label for="txtLirstname" >Firstname</label>
    <input type="text" id="txtLirstname" name="firstname" class="form-control" />
        </div>
    <div class="form-group">
    <label for="txtLastname" >Lastname</label>
    <input type="text" id="txtLastname" name="lastname" class="form-control" />
        </div>
    <div class="form-group">
    <label for="txtTwittername" >Twittername</label>
    <input type="text" id="txtTwittername" name="twittername" class="form-control" />
        </div>
    
    <input type="submit" class="btn" id="btnCreateTicket" value="Create Ticket" />
</form>
</div>

@if(ViewBag.status == "posted") { @ViewBag.ticket
<img src="http://chart.apis.google.com/chart?cht=qr&chl=@ViewBag.ticket&chs=120x120" alt="Your qr code" />
}
